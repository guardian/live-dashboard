<configuration>

    <contextName>live-dashboard</contextName>

    <appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

		<encoder>
			<pattern>%date [%thread] %-5level %logger{36} - %msg%n%xException{3}</pattern>
		</encoder>
    </appender>

	<appender name="LOGIN_LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/login.log</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/user-activity.log.%d{yyyy-MM-dd_HH}.gz</fileNamePattern>
			<maxHistory>7</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%date %msg%n</pattern>
		</encoder>
	</appender>

    <!-- see http://logback.qos.ch/manual/configuration.html#overrridingCumulativity -->
    <logger name="login" level="INFO" additivity="false">
        <appender-ref ref="LOGIN_LOGFILE" />
    </logger>


    <root level="INFO">
        <appender-ref ref="LOGFILE"/>
    </root>

</configuration>
