{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description" : "Live Stats Dashboard",
    "Parameters" : {
      "KeyName" : {
        "Description" : "The EC2 Key Pair to allow SSH access to the instance",
        "Type" : "String"
      },
      "Stage": {
        "Description" : "Environment name",
        "Type": "String",
        "AllowedValues" : [ "PROD", "QA" ]
      },
      "InstanceType" : {
        "Description" : "WebServer EC2 instance type",
        "Type" : "String",
        "Default" : "m1.small",
        "AllowedValues" : [ "t1.micro","m1.small","m1.medium","m1.large","m1.xlarge","m2.xlarge","m2.2xlarge","m2.4xlarge","c1.medium","c1.xlarge","cc1.4xlarge","cc2.8xlarge","cg1.4xlarge"],
        "ConstraintDescription" : "must be a valid EC2 instance type."
      },
      "DesiredCapacity" : {
        "Type" : "String",
        "Default" : "2"
      }
  },

  "Mappings" : {
    "Domain" : {
      "PROD" : { "Name" : "live-stats.ophan.co.uk" },
      "QA": { "Name" : "qa-live-stats.ophan.co.uk" }
    }
  },

  "Resources" : {

    "LiveDashboardUser" : {
      "Type" : "AWS::IAM::User",
      "Properties" : {
        "Path": "/"
      }
    },

    "HostKeys" : {
      "Type" : "AWS::IAM::AccessKey",
      "Properties" : {
        "UserName" : {"Ref": "LiveDashboardUser"}
      }
    },

    "LoadBalancer" : {
      "Type" : "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties" : {
        "AvailabilityZones" : { "Fn::GetAZs" : "" },
        "Listeners" : [ {
            "LoadBalancerPort" : "80",
            "InstancePort" : "9000",
            "Protocol" : "HTTP"
         } ],

        "HealthCheck" : {
            "Target" : "HTTP:9000/health-check",
            "HealthyThreshold" : "3",
            "UnhealthyThreshold" : "5",
            "Interval" : "30",
            "Timeout" : "5"
         }
      }
    },


    "AutoscalingGroup" : {
      "Type" : "AWS::AutoScaling::AutoScalingGroup",
      "Properties" : {
        "AvailabilityZones" : { "Fn::GetAZs" : "" },
        "LaunchConfigurationName" : { "Ref" : "LaunchConfig" },
        "MinSize" : "1",
        "MaxSize" : "5",
        "DesiredCapacity" : { "Ref" : "DesiredCapacity" },
        "HealthCheckType" : "ELB",
        "HealthCheckGracePeriod" : 60,
        "LoadBalancerNames" : [ { "Ref": "LoadBalancer" }],
        "Tags" : [
          { "Key" : "Stage", "Value" : { "Ref" : "Stage" }, "PropagateAtLaunch" : "true"  },
          { "Key" : "App", "Value" : "live-dashboard", "PropagateAtLaunch" : "true"  }
        ],
        "NotificationConfiguration" : { 
          "TopicARN" : "arn:aws:sns:eu-west-1:021353022223:ophan-service-notifications",
          "NotificationTypes":  [ 
            "autoscaling:EC2_INSTANCE_LAUNCH", 
            "autoscaling:EC2_INSTANCE_LAUNCH_ERROR", 
            "autoscaling:EC2_INSTANCE_TERMINATE", 
            "autoscaling:EC2_INSTANCE_TERMINATE_ERROR"
          ]
        }
      }
    },

    "LaunchConfig" : {
      "Type" : "AWS::AutoScaling::LaunchConfiguration",
      "DependsOn" : "HostKeys",
      "Properties" : {
        "KeyName" : { "Ref" : "KeyName" },
        "ImageId" : "ami-f9231b8d",
        "SecurityGroups": [ { "Ref" : "EC2SecurityGroup" } ],
        "InstanceType" : { "Ref" : "InstanceType" },
        "UserData" : { "Fn::Base64" : { "Fn::Join" : ["", [
            "#!/bin/bash -ev\n",
            "yum -y update\n",

            "adduser --system --create-home live-dashboard\n",

            "cat > /etc/stage <<EOF\n",
            { "Ref" : "Stage" }, "\n",
            "EOF\n",

            "wget https://s3-eu-west-1.amazonaws.com/ophan-dist/", { "Ref" : "Stage" }, "/live-dashboard -O /etc/init.d/live-dashboard\n",

            "chmod +x /etc/init.d/live-dashboard\n",

            "chkconfig --add live-dashboard\n",

            "service live-dashboard start\n"

        ]]}}

      }
    },

    "EC2SecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Open up SSH access and http to load balancer",
        "SecurityGroupIngress" : [
          { "IpProtocol": "tcp", "FromPort": "22",   "ToPort": "22",   "CidrIp": "0.0.0.0/0" },
          { "IpProtocol": "tcp", "FromPort": "9000",   "ToPort": "9000",
            "SourceSecurityGroupName": "amazon-elb-sg", "SourceSecurityGroupOwnerId": "amazon-elb" }
        ]
      }
    },

    "MainDnsEntry" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "HostedZoneName" : "ophan.co.uk.",
        "Comment" : "CNAME for tracking servers",
        "Name" : { "Fn::FindInMap": ["Domain", { "Ref" : "Stage" }, "Name"]},
        "Type" : "CNAME",
        "TTL" : "900",
        "ResourceRecords" : [
          {"Fn::GetAtt":["LoadBalancer","DNSName"]}
        ]
      }
    }   
  },

  "Outputs" : {
    "LoadBalancerUrl" : {
      "Value" : { "Ref" : "LoadBalancer" }
    }
  }
}
